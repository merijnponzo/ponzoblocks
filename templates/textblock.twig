{# textblock #}
{% import '@ponzoblocks/elements/button.twig' as button %}
{% import '@ponzoblocks/elements/textfields.twig' as textfields %}
{% extends "@ponzoblocks/blockwrap.twig" %}

{% block blockcontent %}
    <div class="c{{blocktheme.columnwidth}} pb__text {{block.textposition}}">
        <div class="box">
        {{ textfields.all(block, blocktheme) }}
        {# show cta below text if isnt nested within visual #}
        {{ button.button(block.link.link, blocktheme )}}
        </div>
    </div>
    {% if block.textblocks == 2 %}
    <div class="c{{blocktheme.columnwidthsecond}} pb__text {{block.textposition}}">
        <div class="box">
        {{ textfields.second(block, blocktheme) }}
        {# show cta below text if isnt nested within visual #}
        {{ button.button(block.link_second.link, blocktheme )}}
        </div>
    </div>
    {% endif %}
{% endblock %}
