{# textvisual #}
{% import '@ponzoblocks/elements/visual.twig' as visual %}
{% import '@ponzoblocks/elements/button.twig' as button %}
{% import '@ponzoblocks/elements/textfields.twig' as textfields %}

{% extends "@ponzoblocks/blockwrap.twig" %}
{% block blockcontent %}
    <div class="c{{blocktheme.columnwidth}} pb__text {{block.textposition}}" data-theme="{{blocktheme.colortextcolumntheme}}">
        <div class="box">
        {{ textfields.all(block, blocktheme) }}
        {# show cta below text if isnt nested within visual #}
        {{ blocktheme.linkvisual == false ? button.button(block.link.link, blocktheme )}}
        </div>
    </div>
    <div class="c{{ 12 - blocktheme.columnwidth}} pb__visual">
    {{ visual.image(
        block.visual.visual, 
        block.visualoptions.visualoptions)
    }}
    {{ blocktheme.linkvisual ? button.button(block.link.link, blocktheme ) }}
    </div>
{% endblock %}
